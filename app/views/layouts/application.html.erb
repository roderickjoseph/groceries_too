<!DOCTYPE html>
<html>
  <head>
    <title>GroceriesToo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-faded">
      <%= link_to 'Home', root_path, class: 'navbar-brand' %>
      <% if current_user %>
        <%= current_user.email %>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-item nav-link' %>
      <% end %>
      <% if !current_user %>
        <%= link_to 'Sign In', new_user_session_path, class: 'nav-item nav-link' %><span>or</span><%= link_to 'Sign Up', new_user_registration_path, class: 'nav-item nav-link' %>
      <% end %>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
